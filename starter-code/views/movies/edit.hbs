<h2>Edit Movies</h2>

<form action="/movies/{{edit.id}}/edit" method="POST">
    <label for="title">Title</label>
    <input type="text" id="title" name="title" value="{{edit.title}}">

    <label for="genre">Genre</label>
    <input type="text" id="genre" name="genre" value="{{edit.genre}}">

    <label for="plot">Plot</label>
    <input type="text" id="plot" name="plot" value="{{edit.plot}}">
    <button>Save</button>
</form>